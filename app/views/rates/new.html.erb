<h1>New rate</h1>

<% form_for(@rate) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :exposure_id %><br />
    <%= f.text_field :exposure_id %>
  </p>
  <p>
    <%= f.label :factor %><br />
    <%= f.text_field :factor %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :carried %><br />
    <%= f.text_field :carried %>
  </p>
  <p>
    <%= f.label :day %><br />
    <%= f.date_select :day %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', rates_path %>