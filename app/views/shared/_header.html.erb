<div class= "header">
	Risk Rules
	<div class= "login">
		<%- if current_user -%>
				<%= current_user.login %> is logged in<br/>
				<%= link_to "Edit Profile", edit_user_path(current_user) %><br/>
				<%= link_to "Logout", logout_path %>
		<%- else -%>	
			<%= link_to "Register", new_user_path %><br/>
			<%= link_to "Login", login_path %>
		<%- end -%>
	</div>
	<div class= "navItem">
		<%= link_to('My Groups | ', groups_path) unless free? %>
		<%= link_to('My Group | ', current_user.groups.first) if free? %>
		<%= link_to('My Projects | ', projects_path) unless free? %>
		<%= link_to('My Tenders | ', tenders_path) unless free? %>
		<%= link_to('My Exposures', exposures_path) %>
	</div>
</div>