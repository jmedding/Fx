<h1>Listing conversions</h1>

<table>
  <tr>
    <th>Currency in</th>
    <th>Currency out</th>
    <th>First</th>
    <th>Last</th>
  </tr>

<% @conversions.each do |conversion| %>
  <tr>
    <td><%=h conversion.currency_in %></td>
    <td><%=h conversion.currency_out %></td>
    <td><%=h conversion.first %></td>
    <td><%=h conversion.last %></td>
    <td><%= link_to 'Show', conversion %></td>
    <td><%= link_to 'Edit', edit_conversion_path(conversion) %></td>
    <td><%= link_to 'Destroy', conversion, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

