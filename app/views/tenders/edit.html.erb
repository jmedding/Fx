<h1>Editing tender</h1>

<% form_for(@tender) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project_id %><br />
    <%= f.text_field :project_id %>
  </p>
  <p>
    <%= f.label :bid_date %><br />
    <%= f.date_select :bid_date %>
  </p>
  <p>
    <%= f.label :validity %><br />
    <%= f.date_select :validity %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @tender %> |
<%= link_to 'Back', tenders_path %>