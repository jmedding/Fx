<h1>Create a New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :full_name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :login_name %><br />
    <%= f.text_field :login %>
  </p>
	<p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  
  <% fields_for :group do |group| %>
		<p>
		<%= group.label 			:name%><br />
		<%= group.text_field 	:name %>
		</p>
	<% end %>
	<p>  
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>