<h1>New exposure</h1>

<% form_for(@exposure) do |f| %>
  <%= f.error_messages %>

<% if @current_user.account.rules.blank? %>
	<% fields_for :tender do |t| %>
	  <p>
			<%= t.label :description, "Name or Description" %><br />
			<%= t.text_field :description %>
		</p>
		<p>
			<%= t.label :bid_date, "When does the exposure begin" %><br />
			<%= t.date_select(:bid_date) %>
		</p>
		<p>
			<%= t.label :validity, "What is the exposure's validity in days.<small><i> (Must be an integer)</i></small>" %><br />
			<%= t.text_field :validity %>
		</p>
	<% end %>
<% else %>
	<p>
		<%= f.label :tender_id %><br />
		<%= f.collection_select(:tender_id, current_user.get_accessible_tenders?, :id, :description) %> 
	</p>
<% end %>



<p>
    <%= f.label :supply, "Cash Out? <small><i>(Check if we are <b>buying</b> something in a foreign currency as opposed to <b>selling</b> something in a foreign currency)</i></small>"  %><br />
    <%= f.check_box :supply %>
  </p>

	<p>
    <%= f.label :currency_in %><br />
	 <%= f.collection_select(:currency_in, Currency.all, :id, :symbol) %> 
  </p>
  <p>
    <%= f.label :currency_out %><br />
    <%= f.collection_select(:currency_out, Currency.all, :id, :symbol) %> 
  </p>
  <p>
    <%= f.label :carried_rate, "What rate is used in the cost calculation?  <small><i>(Leave blank to use the recommended value)</i></small>" %><br />
    <%= f.text_field :carried_rate %>
  </p>
  <p>
    <%= f.label :amount , "Amount   <small><i>(In foreign currency. Must be and integer)</i></small>"%><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', exposures_path %>