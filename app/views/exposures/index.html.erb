<h1>Listing exposures</h1>

<table>
  <tr>
    <th>Tender</th>
    <th>Currency in</th>
    <th>Currency out</th>
    <th>Factor</th>
    <th>Amount</th>
    <th>Supply</th>
  </tr>

<% @exposures.each do |exposure| %>
  <tr>
    <td><%=h exposure.tender_id %></td>
    <td><%=h exposure.currency_in %></td>
    <td><%=h exposure.currency_out %></td>
    <td><%=h exposure.factor %></td>
    <td><%=h exposure.amount %></td>
    <td><%=h exposure.supply %></td>
    <td><%= link_to 'Show', exposure %></td>
    <td><%= link_to 'Edit', edit_exposure_path(exposure) %></td>
    <td><%= link_to 'Destroy', exposure, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New exposure', new_exposure_path %>